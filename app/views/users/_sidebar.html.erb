<h2>User info</h2>
<%= attachment_image_tag user,:profile_image, size:"63x63",fallback:"no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= user.followings.count %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= user.followers.count %></th>
    </tr>
  </tbody>
</table>
<% if user = current_user %>
  <div class="row">
  <%= link_to edit_user_path(user.id), class:'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
<% else %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn-sm btn-primary" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn-sm btn-success" %>
  <% end %>
<% end %>
  

<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title,class:'form-control' %>
  </div>
  <div class="form-group">
    <label>Option</label>
    <%= f.text_area :body,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book',class:'btn btn-success' %>
  </div>
<% end %>
